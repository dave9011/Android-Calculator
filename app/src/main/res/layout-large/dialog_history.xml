<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/display_background"
                android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/display_background"
        android:paddingBottom="@dimen/history_vertical_padding"
        android:paddingTop="@dimen/history_vertical_padding">

        <TextView
            android:id="@+id/historyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/history_dialog_title"
            android:textColor="@color/calculator_background"
            android:textSize="40sp"/>


    </RelativeLayout>

    <View android:id="@+id/Separator"
          android:layout_width="match_parent"
          android:layout_height="2dip"
          android:background="?android:attr/listDivider" />

    <ListView android:id="@+id/list"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_weight="1"
              >
    </ListView>

    <TextView
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="@dimen/history_horizontal_margin"
        android:layout_marginRight="@dimen/history_horizontal_margin"
        android:layout_marginTop="@dimen/history_vertical_padding"
        android:gravity="end"
        android:text="@string/empty_history_label"
        android:textColor="@color/number_btn_default"/>

</LinearLayout>



    


